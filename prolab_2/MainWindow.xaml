<Window x:Class="prolab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prolab_2"
        mc:Ignorable="d"
        Title="Is Istasyonu" 
        Height="600" 
        Width="1000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Grid>

        <Canvas x:Name="GameCanvas">
            <Canvas.Background>
                <ImageBrush ImageSource="/prolab_2;component/Images/template.png" Stretch="Fill"/>
            </Canvas.Background>

            <Polyline Stroke="AliceBlue" StrokeThickness="40" StrokeLineJoin="Round" Opacity="0.5"
                  Points="960,120 900,120 800,130 700,250 630,300 590,330 400, 380 300, 400 220, 420 80, 480" Visibility="Hidden"/>
            <Polyline Stroke="LightGreen" StrokeThickness="2" StrokeDashArray="4 2" Visibility="Hidden"
                  Points="960,120 900,120 800,130 700,250 630,300 590,330 400, 380 300, 400 220, 420 80, 480" />

            <Polyline Stroke="AliceBlue" StrokeThickness="40" StrokeLineJoin="Round" Opacity="0.5"
                  Points="460,25 510,200 540, 300 490, 350 400, 380 300, 400 220, 420 80, 480" Visibility="Hidden"/>
            <Polyline Stroke="LightGreen" StrokeThickness="2" StrokeDashArray="4 2" Visibility="Hidden"
                  Points="460,25 510,200 540, 300 490, 350 400, 380 300, 400 220, 420 80, 480"/>

            <Border Canvas.Left="10" Canvas.Top="11" Background="Black" BorderBrush="White" BorderThickness="2" CornerRadius="5" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.187"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.53"/>
                    </TransformGroup>
                </Border.RenderTransform>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="HealthText" Text="Can: 100                                  Para: 250" Foreground="LightBlue" FontSize="16" Width="300"/>

                </StackPanel>
            </Border>

            <ProgressBar x:Name="PlayerHealthBar"
                      Minimum="0" Maximum="100" Value="100"
                      Height="20" Width="150"
                      Canvas.Left="95" Canvas.Top="25"
                      Foreground="Red" Background="#555" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button x:Name="btnEnemy2" 
                Content="Üst Dalga" 
                Canvas.Left="421" Canvas.Top="25" 
                Height="30" Width="80" 
                Click="btnEnemy2_Click"
                Background="LightBlue"
                Visibility="Hidden"/>

            <Button x:Name="btnEnemy" 
                Content="Sağ Dalga" 
                Canvas.Left="910" Canvas.Top="104" 
                Height="30" Width="80" 
                Click="btnEnemy_Click"
                Background="LightGreen"/>

            <ComboBox x:Name="tower" 
                  Canvas.Left="285" Canvas.Top="480" 
                  Width="120" Height="30"
                  Text="Kule Seç" IsEditable="False"
                  SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
            </ComboBox>
            <Ellipse Canvas.Left="595" Canvas.Top="149" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Visible"/>
            <Ellipse Canvas.Left="380" Canvas.Top="219" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Visible"/>
            <ComboBox x:Name="tower_Kopyala" 
            Canvas.Left="555" Canvas.Top="190" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
            </ComboBox>
            <Ellipse Canvas.Left="325" Canvas.Top="445" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False"/>
            <ComboBox x:Name="tower_Kopyala1" 
            Canvas.Left="325" Canvas.Top="262" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.695,-1.748">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
            </ComboBox>
            <Ellipse Canvas.Left="860" Canvas.Top="184" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox x:Name="tower_Kopyala2" 
            Canvas.Left="815" Canvas.Top="219" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Center" VerticalAlignment="Top">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
            </ComboBox>
        </Canvas>

        <Border HorizontalAlignment="Right" 
        VerticalAlignment="Bottom" 
        Width="300" Height="150" 
        Margin="10" 
        Background="#CC000000" 
        CornerRadius="5" 
        BorderBrush="White" 
        BorderThickness="1">

            <ListBox x:Name="GameLogList" 
             Background="Transparent" 
             BorderThickness="0" 
             Foreground="White" 
             FontSize="12"
             ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        </Border>

    </Grid>
</Window>