<Window x:Class="prolab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prolab_2"
        mc:Ignorable="d"
        Title="Is Istasyonu" 
        Height="600" 
        Width="1000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Window.Resources>
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Image Source="/prolab_2;component/Images/button.png" Stretch="UniformToFill"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <Canvas x:Name="GameCanvas">
            <Canvas.Background>
                <ImageBrush ImageSource="/prolab_2;component/Images/templatee.png" Stretch="Fill"/>
            </Canvas.Background>

            <Polyline Stroke="AliceBlue" StrokeThickness="40" StrokeLineJoin="Round" Opacity="0.5"
                  Points="960,120 900,120 800,130 700,250 630,300 590,330 400, 380 300, 400 220, 420 80, 480" Visibility="Hidden"/>
            <Polyline Stroke="LightGreen" StrokeThickness="2" StrokeDashArray="4 2" Visibility="Hidden"
                  Points="960,120 900,120 800,130 700,250 630,300 590,330 400, 380 300, 400 220, 420 80, 480" />
            <Polyline Stroke="AliceBlue" StrokeThickness="40" StrokeLineJoin="Round" Opacity="0.5"
                  Points="460,25 510,200 540, 300 490, 350 400, 380 300, 400 220, 420 80, 480" Visibility="Hidden"/>
            <Polyline Stroke="LightGreen" StrokeThickness="2" StrokeDashArray="4 2" Visibility="Hidden"
                  Points="460,25 510,200 540, 300 490, 350 400, 380 300, 400 220, 420 80, 480"/>

            <Border Canvas.Left="10" Canvas.Top="11" Background="Black" BorderBrush="White" BorderThickness="2" CornerRadius="5" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="418">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.187"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.53"/>
                    </TransformGroup>
                </Border.RenderTransform>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="HealthText" 
                               Text="Para: 250      Dalga: 0       Can: 100" 
                               Foreground="LightBlue" 
                               FontSize="16" 
                               Width="409"/>
                </StackPanel>
            </Border>

            <Rectangle Width="150" Height="20" 
                       Canvas.Left="270" Canvas.Top="24"
                       Fill="#555" 
                       RadiusX="10" RadiusY="10"/>

            <Rectangle x:Name="PlayerHealthRect" 
                       Width="150" Height="20" 
                       Canvas.Left="270" Canvas.Top="24"
                       Fill="DarkRed" 
                       RadiusX="10" RadiusY="10"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button x:Name="btnEnemy2" 
                    Canvas.Left="345" Canvas.Top="-15" 
                    Height="119" Width="238" 
                    Click="btnEnemy2_Click"
                    Style="{StaticResource GameButtonStyle}"
                    Visibility="Hidden" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="btnEnemy" 
                    Canvas.Left="843" Canvas.Top="63" 
                    Height="121" Width="226" 
                    Click="btnEnemy_Click"
                    Style="{StaticResource GameButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <ComboBox x:Name="tower" 
                  Canvas.Left="285" Canvas.Top="480" 
                  Width="120" Height="30"
                  Text="Kule Seç" IsEditable="False"
                  SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 - Topçu"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 - Büyücü"/>
            </ComboBox>
            <ComboBox x:Name="tower_Kopyala" 
            Canvas.Left="555" Canvas.Top="190" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 - Topçu"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 - Büyücü"/>
            </ComboBox>
            <ComboBox x:Name="tower_Kopyala1" 
            Canvas.Left="325" Canvas.Top="262" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.695,-1.748">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 - Topçu"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 - Büyücü"/>
            </ComboBox>
            <ComboBox x:Name="tower_Kopyala2" 
            Canvas.Left="819" Canvas.Top="194" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.413,-0.522">
                <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
                <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
                <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 - Topçu"/>
                <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 - Büyücü"/>
            </ComboBox>
        </Canvas>

        <Border HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Width="300" Height="150" 
                Margin="10" 
                Background="#CC000000" 
                CornerRadius="5" 
                BorderBrush="White" 
                BorderThickness="1">
            <ListBox x:Name="GameLogList" 
                     Background="Transparent" 
                     BorderThickness="0" 
                     Foreground="White" 
                     FontSize="12"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        </Border>

        <Grid x:Name="IntroLayer" Panel.ZIndex="999">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="LeftDoor" Grid.Column="0" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TranslateTransform X="0"/>
                </Border.RenderTransform>
                <Border.Background>
                    <ImageBrush ImageSource="/prolab_2;component/Images/gate.png" 
                                Stretch="Fill" 
                                Viewbox="0,0,0.5,1"/>
                </Border.Background>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#8B4513"/>
                    </Style>
                </Border.Style>
            </Border>

            <Border x:Name="RightDoor" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TranslateTransform X="0"/>
                </Border.RenderTransform>
                <Border.Background>
                    <ImageBrush ImageSource="/prolab_2;component/Images/gate.png" 
                                Stretch="Fill" 
                                Viewbox="0.5,0,0.5,1"/>
                </Border.Background>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#8B4513"/>
                    </Style>
                </Border.Style>
            </Border>

            <Button x:Name="BtnStartGame"
                    Grid.ColumnSpan="2"
                    Content="BAŞLAT"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="200" Height="102"
                    FontSize="20" FontWeight="Bold"
                    Click="BtnStartGame_Click"
                    Style="{StaticResource GameButtonStyle}" Margin="400,254,0,0">
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5"/>
                </Button.Effect>
            </Button>
        </Grid>

    </Grid>
</Window>