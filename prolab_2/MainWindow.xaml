<Window x:Class="prolab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prolab_2"
        mc:Ignorable="d"
        Title="Is Istasyonu" 
        Height="600" 
        Width="1000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    <Canvas x:Name="GameCanvas" Background="#3E3E42" Margin="10">

        <Polyline Stroke="AliceBlue" StrokeThickness="40" StrokeLineJoin="Round" Opacity="0.5"
                  Points="950,200 700,250 400,300 150,300 150,400"/>
        <Polyline Stroke="LightGreen" StrokeThickness="2" StrokeDashArray="4 2"
                  Points="950,200 700,250 400,300 150,300 150,400"/>

        <Polyline Stroke="AliceBlue" StrokeThickness="40" StrokeLineJoin="Round" Opacity="0.5"
                  Points="500,10 450,200 400,300 150,300 150,400"/>
        <Polyline Stroke="LightGreen" StrokeThickness="2" StrokeDashArray="4 2"
                  Points="500,10 450,200 400,300"/>

        <Border Canvas.Left="10" Canvas.Top="10" Background="Black" BorderBrush="White" BorderThickness="2" CornerRadius="5" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DURUM: " Foreground="White" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="HealthText" Text="Can: 100 | Para: 250" Foreground="LightGreen" FontSize="16" Width="300"/>
            </StackPanel>
        </Border>

        <ProgressBar x:Name="PlayerHealthBar"
                     Minimum="0" Maximum="100" Value="100"
                     Height="10" Width="320"
                     Canvas.Left="10" Canvas.Top="45"
                     Foreground="Red" Background="#555"/>

        <Button x:Name="btnEnemy2" 
                Content="Üst Dalga" 
                Canvas.Left="470" Canvas.Top="10" 
                Height="30" Width="80" 
                Click="btnEnemy2_Click"
                Background="LightBlue"
                Visibility="Hidden"/>

        <Button x:Name="btnEnemy" 
                Content="Sağ Dalga" 
                Canvas.Left="900" Canvas.Top="180" 
                Height="30" Width="80" 
                Click="btnEnemy_Click"
                Background="LightGreen"/>

        <ComboBox x:Name="tower" 
                  Canvas.Left="220" Canvas.Top="354" 
                  Width="120" Height="30"
                  Text="Kule Seç" IsEditable="False"
                  SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
            <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
            <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
            <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
        </ComboBox>
        <Ellipse Canvas.Left="510" Canvas.Top="158" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Visible"/>
        <Ellipse Canvas.Left="303" Canvas.Top="75" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Visible"/>
        <ComboBox x:Name="tower_Kopyala" 
            Canvas.Left="500" Canvas.Top="193" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
            <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
            <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
            <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
        </ComboBox>
        <Ellipse Canvas.Left="230" Canvas.Top="320" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False"/>
        <ComboBox x:Name="tower_Kopyala1" 
            Canvas.Left="293" Canvas.Top="109" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.695,-1.748">
            <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
            <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
            <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
            <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
        </ComboBox>
        <Ellipse Canvas.Left="825" Canvas.Top="263" Width="100" Height="100" Stroke="White" StrokeDashArray="2 2" Opacity="0.3" IsHitTestVisible="False" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox x:Name="tower_Kopyala2" 
            Canvas.Left="815" Canvas.Top="297" 
            Width="120" Height="30"
            Text="Kule Seç" IsEditable="False"
            SelectionChanged="tower_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBoxItem Content="ArcherTower" ToolTip="Maliyet: 100 - Okçu Kulesi"/>
            <ComboBoxItem Content="IceTower" ToolTip="Maliyet: 150 - Buz Kulesi"/>
            <ComboBoxItem Content="CannonTower" ToolTip="Maliyet: 250 (Topçu - Alan Hasarı)"/>
            <ComboBoxItem Content="SorcererTower" ToolTip="Maliyet: 200 (Büyücü - Zırh Delici)"/>
        </ComboBox>
    </Canvas>
</Window>